<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NearMe"
    android:background="@drawable/ic_googlemaps">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/emergency_top"
        android:backgroundTint="@color/dashboard_item1"
        android:elevation="@dimen/_10sdp"

        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/backNearMe"
            android:elevation="@dimen/_31sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_round_arrow_back_24"

            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="sans-serif-black"
            android:text="Near Me"
            android:textColor="@color/white"
            android:textSize="@dimen/_36sdp" />
        <ImageView
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_26sdp"
            android:background="@drawable/ic_baseline_map_24"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_410sdp"


        android:background="@drawable/round_navigation_corners"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:fontFamily="cursive"
            android:text="Find Locations Near You"
            android:textColor="@color/white"
            android:textSize="@dimen/_26sdp"
            android:textStyle="normal|bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hospitalsButton"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_background_red_blue"
            android:backgroundTint="@null"
            android:fontFamily="sans-serif-black"
            android:text="Hospitals"
            android:textColor="@color/white"
            android:textSize="@dimen/_21ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/doctorsOfficeButton"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_background_red_yellow"
            android:backgroundTint="@null"
            android:fontFamily="sans-serif-black"
            android:text="Doctor's Office"
            android:textColor="@color/white"
            android:textSize="@dimen/_21ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hospitalsButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pharmacyButton"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_background_yellow_green"
            android:backgroundTint="@null"
            android:fontFamily="sans-serif-black"
            android:text="Pharmacies"
            android:textColor="@color/white"
            android:textSize="@dimen/_21ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/doctorsOfficeButton" />
    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>