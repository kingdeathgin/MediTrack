<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meditrack.HeadPage"
    android:background="#e9ebd3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Common Arm Injuries and Diseases"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Click on a button below to learn more about each topic!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tendinitisButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="#32d1b1"
            android:drawableRight="@drawable/ic_hand"
            android:drawableTint="@color/white"
            android:text="Tendinitis"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="@dimen/_13sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bursitisButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="#32d1b1"
            android:drawableRight="@drawable/ic_hand"
            android:drawableTint="@color/white"
            android:text="Bursitis"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="@dimen/_13sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/armSprainButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="#32d1b1"
            android:drawableRight="@drawable/ic_hand"
            android:drawableTint="@color/white"
            android:text="Arm Sprain"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="@dimen/_13sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/osteoarthritisButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="#32d1b1"
            android:drawableRight="@drawable/ic_hand"
            android:drawableTint="@color/white"
            android:text="Osteoarthritis"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="@dimen/_13sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButtonHead"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:backgroundTint="#c20044"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="@dimen/_10sdp" />


    </LinearLayout>


</RelativeLayout>