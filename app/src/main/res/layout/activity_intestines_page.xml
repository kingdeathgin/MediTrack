<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meditrack.HeartPage"
    android:background="@color/intestines">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Common Intestinal Diseases"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Click on a button below to learn more about each topic!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/periAbButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/intestines_page"
            android:text="Perianal Abscess"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_intestines"
            android:drawableTint="@color/white"
            android:textSize="20dp"
            app:cornerRadius="@dimen/_13sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/inguinalHerniaButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/intestines_page"
            android:text="Inguinal Hernia"
            android:drawableRight="@drawable/ic_intestines"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="@dimen/_13sdp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_50sdp"
            app:cornerRadius="@dimen/_13sdp"
            android:backgroundTint="@color/back"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>