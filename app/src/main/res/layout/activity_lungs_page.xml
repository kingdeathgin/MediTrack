<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meditrack.HeadPage"
    android:background="@color/lung_red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common Lung Diseases"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on a button below to learn more about each topic!"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/asthmaButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="#a10808"
            android:layout_gravity="center"
            android:text="Asthma"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_lung"
            android:drawableTint="@color/white"
            app:cornerRadius="@dimen/_13sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bronchitisButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="#a10808"
            android:layout_gravity="center"
            android:text="Bronchitis"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_lung"
            android:drawableTint="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:cornerRadius="@dimen/_13sdp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pneumoniaButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="#a10808"
            android:layout_gravity="center"
            android:text="Pneumonia"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_lung"
            android:drawableTint="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:cornerRadius="@dimen/_13sdp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pulmonaryEdemaButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="#a10808"
            android:layout_gravity="center"
            android:text="Pulmonary Edema"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_lung"
            android:drawableTint="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:cornerRadius="@dimen/_13sdp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButtonHead"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:backgroundTint="#c20044"
            android:layout_gravity="center"
            android:text="Back"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_50sdp"
            app:cornerRadius="@dimen/_10sdp"
            />





    </LinearLayout>


</RelativeLayout>