<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.meditrack.HeartPage"
    android:background="@color/stomach_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common Stomach Diseases"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on a button below to learn more about each topic!"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textStyle="italic"
            android:textColor="@color/black"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/celiacButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="@color/stomach_page"
            android:layout_gravity="center"
            android:text="Celiac Disease"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_stomach"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:cornerRadius="@dimen/_13sdp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chronsButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="@color/stomach_page"
            android:layout_gravity="center"
            android:text="Chron's Disease"
            android:drawableRight="@drawable/ic_stomach"
            android:drawableTint="@color/white"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:cornerRadius="@dimen/_13sdp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/malabButton"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="@color/stomach_page"
            android:layout_gravity="center"
            android:text="Malabsorption"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_stomach"
            android:drawableTint="@color/white"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:cornerRadius="@dimen/_13sdp"
            />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:backgroundTint="@color/back"
            android:layout_gravity="center"

            android:text="Back"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_50sdp"
            app:cornerRadius="@dimen/_10sdp"
            android:textStyle="bold"
            />





    </LinearLayout>


</RelativeLayout>