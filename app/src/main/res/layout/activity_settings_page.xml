<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backArrowButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/ic_arrow"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="175dp"
            android:text="Background Color"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/backgroundRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/redBackgroundRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/black"
                android:text="Red"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/yellowBackgroundRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-48dp"
                android:buttonTint="@color/yellow"
                android:text="Yellow"
                android:textColor="@color/yellow"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/blueBackgroundRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="-48dp"
                android:buttonTint="@color/blue"
                android:text="Blue"
                android:textColor="@color/blue"
                android:textSize="25dp"
                android:textStyle="bold" />


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Theme Selection"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/themeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/lightModeThemeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:buttonTint="@color/black"
                android:text="Light Mode"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/darkModeThemeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:buttonTint="@color/black"
                android:text="Dark Mode"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RadioGroup>


    </LinearLayout>



</RelativeLayout>